    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        
        try {
            //to transfer data from userframe to transframe and record the data to database
            JOptionPane.showMessageDialog(null, "Your input has been recorded in the database", "User Record", JOptionPane.INFORMATION_MESSAGE); 
            String name = nameTF.getText();
            int hr, pay;
            hr = Integer.parseInt(timeTF1.getText());
            pay = hr * 50;                                                
                        new TransFrame(name, hr, pay).setVisible(true);
            Connection con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost:3306/cybercafe",
                        "root", "");    
            
            String query = "INSERT INTO transactions(user, duration, cost, startTime, endTime) VALUES (?,?,?,NOW(),ADDTIME(NOW(),CONCAT(?,':00:00')))";
            PreparedStatement st = con.prepareStatement(query);                        
            
            st.setString(1, name);
            st.setInt(2, hr);
            st.setInt(3, pay);
            st.setInt(4, hr);
            
            st.executeUpdate();
            
            
            
            con.close();                        
            
            
            
            
        } catch (SQLException e) {
        }
        
        dispose();
    }                                        

