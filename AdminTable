    private void viewbtnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        //view table from database
        String sql="SELECT * FROM transactions";
        try{
            
            JOptionPane.showMessageDialog(null, "User records");
        PreparedStatement pst = con.prepareStatement(sql);
        ResultSet rs=pst.executeQuery();
        DefaultTableModel model =(DefaultTableModel)usertb.getModel();
        model.setRowCount(0);
        while(rs.next()){
        model.addRow(new String[]{rs.getString(1),rs.getString(2),rs.getString(3),rs.getString(4),rs.getString(5),rs.getString(6)});
        }
        }
        catch(SQLException ex){
        
        }
    }                                       

    private void updatebtnActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        // update admin details
        JOptionPane.showMessageDialog(null, "Please update your login details", "Update Admin Details", JOptionPane.INFORMATION_MESSAGE); 
        UpAdmin UA = new UpAdmin();
        UA.show();
        dispose();
    }                                         

