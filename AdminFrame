    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            // to connect the database
            Connection con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost:3306/cybercafe",
                        "root", "");   
            String sql = "Select * from admins where adminName=? and password=?";
            PreparedStatement pst = con.prepareStatement(sql);
            pst.setString(1, usertf.getText());
            pst.setString(2, passtf.getText());
            ResultSet rs = pst.executeQuery();
            if(rs.next()){
                JOptionPane.showMessageDialog(null, "Username and Password Matched!","Admin Details",JOptionPane.INFORMATION_MESSAGE);
                AdminTable AT = new AdminTable();
        AT.show();
        dispose(); 
            }else{
                JOptionPane.showMessageDialog(null, "Incorrect Username and Password");
                usertf.setText("");
                passtf.setText("");
            }
            
        } catch (Exception ex) {
            Logger.getLogger(AdminFrame.class.getName()).log(Level.SEVERE, null, ex);
        } 
        
    }                                        

