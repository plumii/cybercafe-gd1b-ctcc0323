    //update admin
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    try{
    String name = admintf.getText();
    String pass = adminpasstf.getText();
    Connection con = (Connection) DriverManager.getConnection("jdbc:mysql://localhost:3306/cybercafe",
                        "root", "");    
    PreparedStatement ps=con.prepareStatement("UPDATE admins set adminName=?,password=?");
    ps.setString(1, name);
    ps.setString(2, pass);
    ps.executeUpdate();
    JOptionPane.showMessageDialog(null, "Update Successful", "Update Admin", JOptionPane.INFORMATION_MESSAGE); 
    AdminTable f2 = new AdminTable();
        f2.show();
        dispose();
    }
    catch(HeadlessException | SQLException ex){}
    
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
